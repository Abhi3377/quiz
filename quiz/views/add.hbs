
<div class="container">
    <div class="col-md-4 col-md-offset-2 qa">
        <form action="/addquestions" method="post">

            <div class="form-group">
                <label for="ques">Question:</label><br>
                <textarea id="ques" name="ques" required></textarea>
            </div>
            <div class="form-group">
                <label for="o1">Option 1:</label><br>
                <input type="text" id="o1" name="option1" required>
            </div>
            <div class="form-group">
                <label for="o2">Option 2:</label><br>
                <input type="text" id="o2" name="option2" required >
            </div>
            <div class="form-group">
                <label for="o3">Option 3:</label><br>
                <input type="text" id="o3" name="option3"required >
            </div>
            <div class="form-group">
                <label for="o4">Option 4:</label><br>
                <input type="text" id="o4" name="option4" required>
             </div>
            <div class="form-group">
                <label for="ans">Answer</label><br>
                <input type="number" max="4" min="1" id="ans" name="answer" required>
            </div>
            <div class="form-group">
                <label for="db">Dtabase name</label><br>
                <select id="db" name="database">
                    <option value="html5">HTML5</option>
                    <option value="css">CSS</option>
                    <option value="Javascript">Javascript</option>

                </select>
            </div>
            <button type="submit">Add</button>

        </form>

    </div>

</div>